<div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
        <%= f.label :title, class: "col-sm-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
            </div>
        </div>

        <div class="form-group row">
        <%= f.label :description, class: "col-sm-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_area :description, placeholder: "Description", rows: 10, class: "form-control" %>
            </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label" %>
          <div class="col-10"> 
           <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} + '  ' %>
            <% end %>
          </div>
        </div>

        
        <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-warning btn-lg" %>
        </div>
    <% end %>
    </div>

    <p><%= link_to '[ Cancel and Return to Article Listing ]', articles_path %></p>
</div>
