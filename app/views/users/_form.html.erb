<div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
        <%= f.label :username, class: "col-sm-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
            </div>
        </div>

        <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
            <div class="col-10">
                <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
            </div>
        </div>

        <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
            <div class="col-10">
                <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group row justify-content-center">
        <%= f.submit "Sign up", class: "btn btn-warning btn-lg" %>
        </div>
    <% end %>
    </div>

    <p><%= link_to '[ Cancel and Return to Article Listing ]', articles_path %></p>
</div>
