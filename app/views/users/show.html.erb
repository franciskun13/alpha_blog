<h2 class="text-center" style="margin: 25px 0px 25px 0px;"><%= @user.username %> profile</h2>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
    <% if logged_in? && current_user == @user %>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
</div>

<h3 class="text-center" style="margin: 25px 0px 0px 0px;">Articles</h3>

<%= render 'articles/article'  %>